// 颜色
$accentColor = #409eff
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34
$arrowBgColor = #ccc
$badgeTipColor = #42b983
$badgeWarningColor = darken(#ffe564, 35%)
$badgeErrorColor = #DA5961

#app .theme-container .page table thead tr{
    background-color: #f2f2f2;
}
#app .theme-container .page table thead tr th{
    min-width:100px;
}
#app .theme-container .page .page-edit a{
   color: #409eff;
}

@media screen and (max-width: 767px) {
  #app .theme-container .page .theme-default-content {
    width: 100% !important;
    max-width:none;
  }

  #app .theme-container .page .page-edit{
    width: 100% !important;
      max-width:none;
  }

  #app .theme-container .page .page-nav{
        width: 100% !important;
             max-width:none;
      }
}

@media screen and (min-width: 1400px) {
  #app .theme-container .page .theme-default-content {
    width: 1200px !important;
    max-width:none;
  }
  #app .theme-container .page .page-edit{
      width: 1200px !important;
         max-width:none;
    }
  #app .theme-container .page .page-nav{
      width: 1200px !important;
         max-width:none;
    }

}


::-webkit-scrollbar {
    scrollbar-gutter: stable;
    width: 6px;
}
